{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@parsers-jamboree/arktype/*": ["libs/arktype/src/lib/*"],
      "@parsers-jamboree/checker": ["libs/checker/src/index.ts"],
      "@parsers-jamboree/common": ["libs/common/src/index.ts"],
      "@parsers-jamboree/effect-ts-schema/*": [
        "libs/effect-ts-schema/src/lib/*"
      ],
      "@parsers-jamboree/runtypes/*": ["libs/runtypes/src/lib/*"],
      "@parsers-jamboree/schemata-ts/*": ["libs/schemata-ts/src/lib/*"],
      "@parsers-jamboree/typebox/*": ["libs/typebox/src/lib/*"],
      "@parsers-jamboree/valibot/*": ["libs/valibot/src/lib/*"],
      "@parsers-jamboree/vinejs/*": ["libs/vinejs/src/lib/*"],
      "@parsers-jamboree/zod/*": ["libs/zod/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
